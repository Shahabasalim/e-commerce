      <!-- Main -->
    <!-- Main -->
<main class="main-container">
  <form action="addcategory" method="POST" enctype="multipart/form-data">
      <div class="details">
          
          <label for="add_category">Enter Category</label>
          <input type="text" id="add_category" name="category" required>
          <br>
          <label for="add_subcategory">Enter Subcategory</label>
          <input type="text" id="add_subcategory" name="subcategory" required>
          <br>
            <label for="add_image">Select Image</label>
            <input type="file" id="add_image" name="image" accept="image/*">
          <br>
          <button type="submit">Add Category</button>
      </div>
  </form>
</main>
<!-- End Main -->

      <!-- End Main -->

    </div>

