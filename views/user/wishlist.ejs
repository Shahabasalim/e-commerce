	<main>
		<div class="block2">
			<% wishdata.forEach((data)=> { %>
				<div style="display: flex;">

					<% data.productId.forEach((item)=>{ %>
						<div style="display: flex; flex-direction: column;">

							<div class="block2-pic hov-img0">
								<img src="/image/<%=item.Image[0]%>" alt="">
							</div>
							<div class="block2-txt flex-w flex-t p-t-14">
								<div class="block2-txt-child1 flex-col-l">
									<a href="product-detail.html" class="stext-104 cl4 cl1 trans-04 js-name-b2 p-b-6">
										<%= item.product_name %>
									</a>
									<span class="stext-105 cl3">
										<%= item.product_price %>
									</span>
								</div>
								<div class="block2-txt-child2 flex-r p-t-3">
									<a href="/" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
										<button class="fa-solid fa-heart"  onclick="remove(event,'<%= item._id %>')">
										
										</button>

										


									</a>
								</div>
							</div>
						</div>
						<% }) %>
				</div>
				<% }) %>
		</div>


	</main>

	<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>


	<script>
		async function remove(e, productId) {

			console.log(productId);
			try {
				e.preventDefault()

				const response = await axios.get(`/removewishlist/${productId}`)
				 if(response.data.message=="ok"){

            window.location.reload()}
			} catch (err) {
				console.log(err);
			}
		}
	</script>

